# ============================================
# EduStore Backend - Environment Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git - keep it in .gitignore

# Database (NeonDB PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require&channel_binding=require

# Brevo Email API
# CRITICAL: EMAIL_FROM must be verified in Brevo Dashboard
# Steps: Brevo Dashboard → Settings → Senders & IPs → Add Sender → Verify Email
BREVO_API_KEY=your_brevo_api_key_here
EMAIL_FROM=your-verified-email@domain.com
EMAIL_FROM_NAME=EduStore

# SMTP (Legacy - for local development only)
SMTP_USER=your-smtp-user@gmail.com
SMTP_PASS=your-app-password

# JWT Secret Key
# Generate a strong random key for production
SECRET_KEY=your-secret-key-here

# Redis Cache (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Cloud Storage (Cloudinary)
STORAGE_PROVIDER=cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Chat Microservice
# Use production URL for Render deployment, localhost for local dev
CHAT_SERVICE_URL=https://your-chat-service.up.railway.app

# Frontend URL for CORS
# Use production URL for Render deployment, localhost for local dev
FRONTEND_URL=https://your-frontend.vercel.app
